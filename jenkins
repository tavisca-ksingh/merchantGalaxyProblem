pipeline {
    agent any
     environment {
    registry = "itskrrish/merchantgalaxy"
    registryCredential = 'dockerhub'
}
    stages {
        stage('Build') {
            steps {
                sh script: '''
                    echo "I am in build step!"
                    chmod 777 gradlew
                    ./gradlew build
                ''',
            label: "Building Project"
            }
        }
        stage('Test')
        {
            steps {
                sh script: '''
                    echo "I am in Test step"
                    ./gradlew test
                ''',
            label: "Running Unit Test Cases"
            }
        }
        

stage('Static Code Analysis')
{
steps {
sh script: '''
echo "I am in Sonarqube scan"

''',
label: "Running Sonarqube Scan"
} 
}


   stage('Build DockerImage')
        {
            steps {
                sh label: '', script: '''
			echo "I am at building stage"
			docker build -t merchantgalaxy:1.1 .
			docker run -d -p 1234:1234 merchantgalaxy:1.1
			'''
            }
        }
        stage('Publish DockerImage')
        {
            steps {
                sh label: '', script: '''
		echo "I am Pubishing DockerImage "
		    
		    
                    docker tag merchantgalaxy:1.1 itskrrish/merchantgalaxy
                    docker push itskrrish/merchantgalaxy
		    '''
        	}
    	}
    }
    post{
    always{
    		deleteDir()
		}
	}
}
